<?xml version="1.0" encoding="utf-8"?>
<mdscript name="hds_yvary_harness_trigger">
  <cues>

    <!-- Poll until anchor exists, then fire once when you flip true -->

    <cue name="HDSYV_Trigger_Ring" checkinterval="1s">
      <conditions>
        <check_value value="md.hds_yvary_harness.HDSYV_Dev_Boot.$HDS_dev_anchor?"/>
        <check_value value="false" comment="comment out to run"/>
      </conditions>
      <actions>
        <debug_text text="'[HDS] Trigger: Ring'"/>
        <signal_cue cue="md.hds_yvary_harness.HDSYV_Dev_RunSample"/>
      </actions>
    </cue>

    <cue name="HDSYV_Trigger_Line" checkinterval="1s">
      <conditions>
        <check_value value="md.hds_yvary_harness.HDSYV_Dev_Boot.$HDS_dev_anchor?"/>
        <!-- <check_value value="false" comment="comment out to run"/> -->
      </conditions>
      <actions>
        <debug_text text="'[HDS] Trigger: Line'"/>
        <signal_cue cue="md.hds_yvary_harness.HDSYV_Dev_Line_Current"/>
      </actions>
    </cue>

    <cue name="HDSYV_Trigger_Cleanup" checkinterval="1s">
      <conditions>
        <check_value value="md.hds_yvary_harness.HDSYV_Dev_Boot.$HDS_dev_anchor?"/>
        <check_value value="false" comment="comment out to run"/>
      </conditions>
      <actions>
        <debug_text text="'[HDS] Trigger: Cleanup'"/>
        <signal_cue cue="md.hds_yvary_harness.HDSYV_Dev_Cleanup"/>
      </actions>
    </cue>

  </cues>
</mdscript>
